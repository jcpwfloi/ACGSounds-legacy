include util
extends layout

block content
    header
        +normalNav()
    .row
        .col.s4
            .row
                .col.s12
                    .card.blue-grey.darken-1
                        .card-content.white-text
                            h6= sheet.sheetName
                            p 上传者：
                            p 标签：
                            p(style='font-size: 12px') 简介：#{sheet.sheetIntro.length > 100 ? sheet.sheetIntro.substr(0, 96) + '....' : sheet.sheetIntro}
                        .card-action
                            a(href='#') 下载 MIDI
                            a(href='#') 下载 PDF
                            a(href='#') 下载 SIB
                .col.s12
                    .card
                        .card-content
                            a(href='#', onClick='MIDIjs.play("http://7xr3so.com1.z0.glb.clouddn.com/56c8419d1e373bbf04efcc18.mid")')
                                i.material-icons play_circle_filled
                            | &nbsp;&nbsp;
                            a(href='#', onClick='MIDIjs.stop()')
                                i.material-icons stop
                            .secondary-content
                                | MIDI 播放控制
                            br
                            //span#message
            .row
                .col.s12
                    ul.collection#commentBox
                        .progress
                            .indeterminate
                        .row.center
                            | Loading...
        .col.s8
            #carouse
                object(data!='http://7xr3so.com1.z0.glb.clouddn.com/' + sheet._id + '.pdf', type='application/pdf', style='width: 100%; height: 600px')

        .template-1(style='display: none')
            li.collection-item.avatar
                img.circle(src='', alt='')
                a.title(href='/user/{0}') {0}
                p {1}
                p.right-align.grey-text {4}
                .secondary-content.grey-text(style='margin-right: 90px; margin-top: -10px') {2}#
                .secondary-content.grey-text(style='margin-right: 40px; margin-top: -10px') {3}
                a.secondary-content.teal-text.text-lighten-4(href='#', data-comment='{2}', style='margin-top: -10px')
                    i.material-icons thumb_up

block script
    script(src='/javascripts/comment.js')
    script(src='/javascripts/midi.js')
    script.
        $(document).ready(function() {
            $('#carouse').pdfSlider({});

            MIDIjs.message_callback = function(res) {
                Materialize.toast(res, 4000);
            }
        });
