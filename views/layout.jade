doctype html
html
    head
        meta(charset='utf8')
        meta(content!=csrf, name='csrf-token')
        title= title
        link(rel='stylesheet', href='//cdn.bootcss.com/materialize/0.97.5/css/materialize.min.css')
        link(rel='stylesheet', href='https://fonts.lug.ustc.edu.cn/icon?family=Material+Icons')
        script window.languageSetting = "#{__('languageSetting')}";
        script(src='//cdn.bootcss.com/jquery/1.12.0/jquery.min.js')
        script(src='//cdn.bootcss.com/materialize/0.97.5/js/materialize.min.js')
        script(src='/javascripts/jquery.md5.js')
    body
        block content
    script.
        function __get(a,b) {return a ? a : b;}
        function __(str) {
            return window.locales[languageSetting] ? __get(window.locales[languageSetting][str], str) : __get(window.locales['default'][str], str);
        }
        String.prototype.format = function() {
            var args = arguments;
            return this.replace(/{(\d+)}/g, function(match, number) { 
                return typeof args[number] != 'undefined' ? args[number] : match;
            });
        };
    block script
